<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Farmers.FarmerLoginActivity">

    <ImageView
        android:id="@+id/img_farmer"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/sellerlogin"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/title_farmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Farmer Login Form"
        android:gravity="center"
        android:layout_below="@+id/img_farmer"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@android:color/holo_blue_light"
        />
    <EditText
        android:id="@+id/farmer_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/title_farmer"
        android:hint="email "
        android:inputType="textEmailAddress"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/farmer_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/farmer_login_email"
        android:hint="Password "
        android:inputType="textPassword"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/farmer_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/farmer_login_password"
        android:text="Login"
        android:background="@android:color/holo_blue_light"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        />


</RelativeLayout>